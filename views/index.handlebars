{{!-- Setup the index.handlebars to have the template that Handlebars can render onto. --}}

{{!-- Create a button in index.handlebars that will submit the user input into the database. --}}

<div class="row mt-5">
  <div class="col">
    <h3 class="text-center">Ready to eat</h3>
    <ul class="list-group">
      {{#each burgers}}
      {{#unless devoured}}
      <li class="list-group-item">
        <div class="row">
          <div class="col-md-9">
            {{burger_name}}
          </div>
          <div class="col-md-3">
            <button class="devour-button btn btn-primary" data-name="{{burger_name}}">Devour</button>
          </div>
        </div>
      </li>
      {{/unless}}
      {{/each}}
    </ul>
  </div>
  <div class="col">
    <h3 class="text-center">Devoured</h3>
    <ul class="list-group">
      {{#each burgers}}
      {{#if devoured}}
      <li class="list-group-item">
        <div class="row">
          <div class="col-md-10">
            {{burger_name}}
          </div>
          <div class="col-md-2">
            <button class="delete-button btn btn-primary" data-name="{{burger_name}}">x</button>
          </div>
        </div>
      </li>
      {{/if}}
      {{/each}}
    </ul>
  </div>
</div>

<div class="row mt-5">
  <div class="col-md-6 offset-3 add-burger ">
    <h2>Add A Burger</h2>
    <form class="create-form">
      <div class="form-group">
        <input class="form-control" type="text" id="bn" name="bn" placeholder="Burger Name">
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Add Burger</button>
      </div>
    </form>
  </div>
</div>